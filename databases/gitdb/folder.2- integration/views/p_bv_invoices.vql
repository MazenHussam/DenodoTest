CREATE OR REPLACE VIEW p_bv_invoices FOLDER = '/2- integration' AS SELECT country AS country, last_name AS last_name, first_name AS first_name, order_id AS order_id, invoice_id AS invoice_id FROM bv_invoices GROUP BY country, first_name, last_name, order_id, invoice_id HAVING country = 'China' ORDER BY order_id DESC;

ALTER VIEW p_bv_invoices
 LAYOUT (bv_invoices = [20, 20, 200, 200]);

